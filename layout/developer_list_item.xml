<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:minHeight="64dp"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView android:id="@+id/image" android:scaleType="fitCenter"
    android:layout_width="48dp" android:layout_height="48dp"
    android:layout_gravity="center_vertical" android:layout_margin="2dp"></ImageView>
    <LinearLayout android:layout_gravity="center_vertical" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1">
        <TextView android:id="@+id/title" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:textSize="22sp" android:textColor="@android:color/primary_text_dark" android:layout_marginLeft="2dp"  android:layout_marginRight="2dp" />
        <TextView android:id="@+id/summary" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:textSize="14sp" android:textColor="@android:color/secondary_text_dark" android:layout_marginLeft="2dp"  android:layout_marginRight="2dp" />
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RatingBar android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rating"
                android:isIndicator="true" android:stepSize="1"
                style='?android:attr/ratingBarStyleSmall'
                android:layout_gravity="center_vertical" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/downloads"
                android:paddingLeft="8sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
